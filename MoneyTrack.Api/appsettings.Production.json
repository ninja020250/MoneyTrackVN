{
  "JwtSettings": {
    "SecretKey": "${{JWT_SECRET_KEY}}",
    "Issuer": "MoneyTrack",
    "Audience": "MoneyTrack Client",
    "AccessTokenExpirationMinutes": 527040
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "${{DATABASE_URL}}"
  },
  "LLMSettings": {
    "DefaultProvider": "gemini",
    "Providers": {
      "gemini": {
        "ApiKey": "${{GEMINI_API_KEY}}",
        "Model": "gemini-2.5-flash"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExecuting",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing' "
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Month"
        }
      }
    ]
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderName": "MoneyTrack",
    "SenderEmail": "no-reply@moneytrack.com",
    "Username": "${{MAIL_SERVER_USERNAME}}",
    "Password": "${{MAIL_SERVER_PASSWORD}}"
  },
  "ApiLimits": {
    "MoneyTrack.Api.Controllers.AIController.CreateTransaction (MoneyTrack.Api)": 1
  },
  "AllowedHosts": "*"
}
